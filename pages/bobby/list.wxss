/* pages/bobby/list.wxss */ 

page {
    width:100%;
    height:100%;
    background-color: #f5f6fb
}
.top{

    background-image: url('https://x.bestjan.com/jpg/top.png');
    height: 378rpx;
    width: 100%;
    background-position:center;  /** 居中*/
    background-repeat:no-repeat; /** 不重复*/
    background-size:contain; /**等比例缩放*/
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #fff;
    margin: 20rpx;
}
.userinfo-mobile{
    color: #fff;
    margin: 10rpx;
}
.avatar{
    float: left;
}
.userInfo{
    
    float: left;
}
.ms{
    float: right;
    
     
}
.msImage{
    margin-top: 35rpx;
    width: 128rpx;
    height: 68rpx;
}

.header{
    height: 290rpx;
    width: 100%;

}
.tiBlock{
    background-image: url('https://x.bestjan.com/jpg/blockImg.png');
    height: 280rpx;
    width: 90%;
    margin-left: 5%;
    background-position:center;  /** 居中*/
    background-repeat:no-repeat; /** 不重复*/
    background-size:contain; /**等比例缩放*/
}

.ranking, .name, .totalQuestion{
   font-size: large;
    font-weight: bolder;
    padding-top: 30rpx;
    text-align: center;
}
.ranking-color{
    color: #e66627;
}
.totalQuestion{
    font-size: medium;
    color: #999;
     padding-top: 30rpx;
     text-align: center;
     font-weight: lighter;
 }
