}
.top2-font-nickname{
  float: left;
  margin-left: 30rpx;
  margin-top: 50rpx;
  font-size: 30rpx;
  color: #fff;
  font-size: 30rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.btn-area{
  float: left;
  margin: 0 auto;
  width: 95%;
}

.item{
  padding-left: 30rpx;
  padding-bottom: 40rpx;
  float: left;
}
#item-title{
  font-size: 30rpx;
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 50rpx;
}

#item-title h1{
  font-size: 30rpx;
   
}


.perm-title{
  text-align: center;
}
.perm-title2{
  text-align: center;
  color: red;
}
.item-img{
  width: 320rpx;
  height: 320rpx;
  border-radius: 15rpx;
}



.regbtn {
  width: 66%;
  margin: 6% 0 0 17%;
  height: 80rpx;
  background-color: #FCCF00;
  border-radius: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #40404C;
}
button::after {
  border: none;
}

/* 遮罩层 */
.mask{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
  background: #666;
  z-index:9000;
  /*opacity:0.3;*/
}

/* 弹出层 */
.modalDlg{
  width:85%;
  position:fixed;
  top:160px;
  left:0;
  right:0;
  z-index:9999;
  margin:0 auto;
  background-color: #fff;
  border-radius:20rpx;
  display: flex;
  flex-direction: column;
  align-items:center;

}
/* 弹出层里面的文字 */
.text{
  text-align:center;
  font-size:14px;
  color:#666;
  width:260px;
  margin-top:10px;
  color:#999
}
/* 弹出层里面的图片 */
.modalDlg image{
  width:100%;
  height:100px;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;

}
h1{
  padding-top: 80rpx;
  font-weight: bold;
}
.button1{
  margin-bottom: 50rpx;
}